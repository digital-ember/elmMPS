<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
  <id>jetbrains.mps.testing</id>
  <name>MPS Testing</name>
  <category>Custom Languages</category>
  <description>Languages unit-testing java code and MPS aspects such as editor and typesystem</description>
  <version>2021.3.1</version>
  <vendor url="http://www.jetbrains.com/mps/">JetBrains</vendor>
  <idea-version since-build="213.1" until-build="221.1"/>

  <depends>jetbrains.mps.core</depends>
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <mps.LanguageLibrary dir="/languages" hide="true"/>
    <errorHandler implementation="jetbrains.mps.ide.blame.CharismaReporter"/>
  </extensions>
</idea-plugin>
