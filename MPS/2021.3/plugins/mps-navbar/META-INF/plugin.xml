<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
  <id>jetbrains.mps.navbar</id>
  <name>MPS Navigation Bar</name>
  <category>UI</category>
  <description>Navigation bar to support MPS model hierarchy</description>
  <version>2021.3.1</version>
  <vendor url="http://www.jetbrains.com/mps/">JetBrains</vendor>
  <idea-version since-build="213.1" until-build="223.1"/>
  <depends>jetbrains.mps.core</depends>

  <extensions defaultExtensionNs="com.intellij">
    <errorHandler implementation="jetbrains.mps.ide.blame.CharismaReporter"/>
    <navbar implementation="jetbrains.mps.ide.navbar.MPSNavBarExtension" id="MPSNavbar"/>
  </extensions>
</idea-plugin>
